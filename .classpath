<?xml version="1.0" encoding="UTF-8"?>
<classpath>
    <!-- JRE container for running Aura/JS code -->
    <classpathentry kind="con" path="org.eclipse.wst.jsdt.launching.JRE_CONTAINER"/>
    
    <!-- Base browser library for testing Aura components -->
    <classpathentry kind="con" path="org.eclipse.wst.jsdt.launching.baseBrowserLibrary"/>
    
    <!-- Source folder for Aura components -->
    <classpathentry kind="src" path="aura"/>
    
    <!-- Source folder for Lightning helper classes / JS utilities -->
    <classpathentry kind="src" path="helpers"/>
    
    <!-- Source folder for custom Salesforce modules or services -->
    <classpathentry kind="src" path="modules"/>
    
    <!-- Source folder for static resources like CSS, images, and JSON -->
    <classpathentry kind="src" path="static"/>
    
    <!-- Output folder for compiled JS or Aura bundles -->
    <classpathentry kind="output" path="bin"/>
    
    <!-- Optional: library folder for third-party JS or Aura-compatible packages -->
    <classpathentry kind="lib" path="lib"/>
</classpath>
